        <item>landscape</item> <!-- backlight -->
        <item>mix_illuminant</item> <!-- backlight -->
        <item>night</item>
        <item>macro</item>
        <item>sports</item>
        <item>mix_illuminant</item>
        <item>indoor</item>
    </string-array>

    <bool name="previewAlwaysUsesNV12">true</bool>

</resources>
